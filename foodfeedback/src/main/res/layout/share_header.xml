<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:background="#F3F3F2" >

    <TextView
        android:id="@+id/center_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/share_txt"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/header_txt_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.09dp"
        android:layout_alignParentBottom="true"
        android:background="#9A9894" />

    <EditText
        android:id="@+id/search_coachname"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/black_border"
        android:ems="10"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:paddingLeft="5dp"
        android:visibility="gone" >
    </EditText>

    <LinearLayout
        android:id="@+id/leftbutton_share"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/right_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/backarrow" />

        <TextView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/header_image_alignment"
            android:text="@string/back_button"
            android:textColor="@color/setting_buttontxt"
            android:textSize="9pt" />
    </LinearLayout>

</RelativeLayout>