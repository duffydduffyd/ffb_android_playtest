<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pattern"
    android:orientation="vertical" >

    <include
        android:id="@+id/itemCommon"
        layout="@layout/common_header" />

    <ListView
        android:id="@+id/coaches_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/itemCommon"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="6dp"
        android:fadeScrollbars="true" >
    </ListView>

    <!-- <include layout="@layout/select_coach_item" android:id="@+id/item1" /> -->

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/findcoach_goals_button_height"
        android:layout_below="@id/coaches_listView"
        android:layout_centerHorizontal="true"
android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="-115dp"
        android:background="@drawable/redbar_button"
        android:text="@string/continue_tag"
        android:textColor="@color/White" />

    <RelativeLayout
        android:id="@+id/Sendtomyfoodnotsharing"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/findcoach_goals_button_height"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/btnContinue"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/greybtn" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="@dimen/plus_image_size"
                android:layout_height="@dimen/plus_image_size"
                android:src="@drawable/not" />

            <TextView
                android:id="@+id/Sendtomyfoodnotsharing_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="15dp"
                android:text="@string/send_tomy_food"
                android:textColor="@color/White"
                android:textSize="@dimen/findacoach_bubbletxt_size" />
        </LinearLayout>
    </RelativeLayout>

