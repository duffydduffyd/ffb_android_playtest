<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:background="#F3F3F2" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.09dp"
        android:layout_alignParentBottom="true"
        android:background="#9A9894" />

    <TextView
        android:id="@+id/restore_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="@string/restore_purchase"
        android:textColor="@color/ffred"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tracker_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/restore_txt"
        android:text="@string/tracker"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/header_txt_size" />

    <LinearLayout
        android:id="@+id/rightbutton"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical|right" >

        <ImageView
            android:id="@+id/tracker_setting"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/header_image_alignment"
            android:src="@drawable/setting" />
    </LinearLayout>

</RelativeLayout>